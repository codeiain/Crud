{
    "extends": ["tslint:recommended", "tslint-defocus", "tslint-angular"],
    "rulesDirectory": [
        "node_modules/tslint-origin-ordered-imports-rule/dist"
    ],
    "rules": {
        "defocus": true,
        // Custom
        "align": false,
        "trailing-comma": false,
        "eofline": false,
        "interface-name": false,
        "quotemark": [true, "single"],
        "indent": false,
        "no-use-before-declare": false,
        "no-trailing-whitespace": false,
        "object-literal-shorthand": false,
        "max-line-length": [true, 160],
        "no-inferrable-types": false,
        "ordered-imports": true,
        "origin-ordered-imports": [
            true,
            "one-blank-line"
        ],
        "member-ordering": [true, {
            "order": [
              "public-static-field",
              "public-instance-field",
              "private-static-field",
              "private-instance-field",
              "public-constructor",
              "private-constructor",
              "public-instance-method",
              "protected-instance-method",
              "private-instance-method"
            ],
            "alphabetize": false
        }],
        "member-access": true,
        "no-output-on-prefix": false,
        "angular-whitespace": false
    }
}
